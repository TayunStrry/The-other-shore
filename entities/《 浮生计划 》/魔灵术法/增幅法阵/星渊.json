                "is_pushable": false,
                "is_pushable_by_piston": false
            }
        },
        "events": {
            "minecraft:entity_spawned": {
                "add": {
                    "component_groups": [
                        "链接"
                    ]
                }
            },
            "事件:实体消失": {
                "add": {
                    "component_groups": [
                        "消失"
