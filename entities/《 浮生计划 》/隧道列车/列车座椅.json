{
    "format_version": "1.19.10",
    "minecraft:entity": {
        "description": {
            "identifier": "列车组:座椅",
            "is_spawnable": true,
            "is_summonable": true,
            "is_experimental": false,
            "scripts": {
                "animate": [
                    "runs"
                ]
            },
            "animations": {
                "runs": "controller.animation.train_adds"
            }
        },
        "component_groups": {
            "显示": {
                "minecraft:variant": {
                    "value": 0
                },
                "minecraft:collision_box": {
                    "width": 0.25,
                    "height": 0.75
                }
            },
            "隐藏": {
                "minecraft:variant": {
                    "value": 1
                },
                "minecraft:collision_box": {
                    "width": 0.1,
                    "height": 0.1
                }
            }
        },
        "components": {
            "minecraft:is_stackable": {},
            "minecraft:type_family": {
                "family": [
                    "train_parts",
                    "seat",
                    "Tayun",
                    "make"
                ]
            },
            "minecraft:scale": {
                "value": 3.0
            },
            "minecraft:health": {
                "value": 10,
                "max": 10
            },
            "minecraft:knockback_resistance": {
                "value": 1.0
            },
            "minecraft:behavior.find_mount": {
                "priority": 0,
                "within_radius": 5,
                "start_delay": 1,
                "max_failed_attempts": 99
            },
            "minecraft:rideable": {
                "seat_count": 1,
                "family_types": [
                    "player",
                    "prime"
                ],
                "seats": [
                    {
                        "position": [
                            0.00,
                            0.05,
                            0.15
                        ],
                        "min_rider_count": 1,
                        "max_rider_count": 1
                    }
                ]
            },
            "minecraft:movement.hover": {},
            "minecraft:flying_speed": {
                "value": 0.0
            },
            "minecraft:navigation.hover": {
                "can_path_from_air": true,
                "is_amphibious": true,
                "can_swim": true,
                "can_sink": true
            },
            "minecraft:fire_immune": true,
            "minecraft:damage_sensor": {
                "triggers": [
                    {
                        "cause": "fall",
                        "deals_damage": false
                    },
                    {
                        "cause": "projectile",
                        "deals_damage": true
                    }
                ]
            },
            "minecraft:loot": {
                "table": "loot_tables/train/seat.json"
            },
            "minecraft:physics": {},
            "minecraft:pushable": {
                "is_pushable": false,
                "is_pushable_by_piston": true
            }
        },
        "events": {
            "minecraft:entity_spawned": {
                "add": {
                    "component_groups": [
                        "显示"
                    ]
                }
            },
            "事件:显示模式": {
                "add": {
                    "component_groups": [
                        "显示"
                    ]
                },
                "remove": {
                    "component_groups": [
                        "隐藏"
                    ]
                }
            },
            "事件:隐藏模式": {
                "add": {
                    "component_groups": [
                        "隐藏"
                    ]
                },
                "remove": {
                    "component_groups": [
                        "显示"
                    ]
                }
            }
        }
    }
}