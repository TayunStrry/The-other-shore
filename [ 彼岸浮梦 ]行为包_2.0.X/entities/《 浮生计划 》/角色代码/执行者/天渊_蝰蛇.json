{
    "format_version": "1.19.10",
    "minecraft:entity": {
        "description": {
            "identifier": "天渊阁:蝰蛇",
            "is_experimental": false,
            "is_summonable": true,
            "is_spawnable": true,
            "scripts": {
                "animate": [
                    "death"
                ]
            },
            "animations": {
                "death": "controller.animation.data_death"
            }
        },
        "component_groups": {
            "进攻": {
                "minecraft:angry": {
                    "duration": 3,
                    "broadcast_anger": true,
                    "broadcast_range": 16,
                    "broadcast_targets": [
                        "abyss"
                    ],
                    "broadcast_filters": {
                        "test": "is_visible",
                        "subject": "other",
                        "value": true
                    },
                    "calm_event": {
                        "event": "事件:放弃进攻",
                        "target": "self"
                    }
                }
            },
            "退场": {
                "minecraft:timer": {
                    "time": 18,
                    "time_down_event": {
                        "event": "事件:淡化退场",
                        "target": "self"
                    }
                }
            },
            "淡化": {
                "minecraft:scale_by_age": {
                    "start_scale": 2.0,
                    "end_scale": 0.0
                },
                "minecraft:ageable": {
                    "duration": 1,
                    "grow_up": {
                        "event": "事件:实体消失",
                        "target": "self"
                    }
                }
            },
            "消失": {
                "minecraft:scale": {
                    "value": 0.0
                },
                "minecraft:instant_despawn": {}
            }
        },
        "components": {
            "minecraft:behavior.nearest_attackable_target": {
                "priority": 0,
                "entity_types": [
                    {
                        "filters": {
                            "any_of": [
                                {
                                    "test": "is_family",
                                    "subject": "other",
                                    "value": "player"
                                },
                                {
                                    "test": "is_family",
                                    "subject": "other",
                                    "value": "Tayun"
                                },
                                {
                                    "test": "is_family",
                                    "subject": "other",
                                    "value": "warden"
                                },
                                {
                                    "all_of": [
                                        {
                                            "test": "is_family",
                                            "operator": "==",
                                            "subject": "other",
                                            "value": "monster"
                                        },
                                        {
                                            "test": "is_family",
                                            "operator": "!=",
                                            "subject": "other",
                                            "value": "abyss"
                                        }
                                    ]
                                }
                            ]
                        },
                        "within_default": 32
                    }
                ],
                "must_reach": true,
                "must_see": true
            },
            "minecraft:hurt_on_condition": {
                "damage_conditions": [
                    {
                        "filters": {
                            "test": "in_contact_with_water",
                            "subject": "self",
                            "operator": "==",
                            "value": true
                        },
                        "cause": "drowning",
                        "damage_per_tick": 5
                    }
                ]
            },
            "minecraft:behavior.random_stroll": {
                "speed_multiplier": 1,
                "priority": 5
            },
            "minecraft:underwater_movement": {
                "value": 0.15
            },
            "minecraft:on_target_acquired": {
                "event": "事件:发现目标",
                "target": "self"
            },
            "minecraft:navigation.generic": {
                "can_path_over_water": true,
                "is_amphibious": true,
                "can_swim": true,
                "can_walk": true
            },
            "minecraft:experience_reward": {
                "on_death": "query.last_hit_by_player ? 15 : 1"
            },
            "minecraft:collision_box": {
                "width": 0.5,
                "height": 0.5
            },
            "minecraft:type_family": {
                "family": [
                    "monster",
                    "abyss",
                    "viper"
                ]
            },
            "minecraft:movement": {
                "value": 0.35
            },
            "minecraft:pushable": {
                "is_pushable_by_piston": true,
                "is_pushable": true
            },
            "minecraft:scheduler": {
                "min_delay_secs": 2,
                "max_delay_secs": 4,
                "scheduled_events": [
                    {
                        "filters": {
                            "all_of": [
                                {
                                    "test": "has_tag",
                                    "operator": "!=",
                                    "value": "End_of_call"
                                },
                                {
                                    "test": "has_component",
                                    "value": "minecraft:angry"
                                },
                                {
                                    "test": "in_contact_with_water",
                                    "value": false
                                }
                            ]
                        },
                        "event": "事件:召唤野蜂",
                        "target": "self"
                    }
                ]
            },
            "minecraft:physics": {
                "has_collision": true,
                "has_gravity": true
            },
            "minecraft:despawn": {
                "filters": {
                    "all_of": [
                        {
                            "test": "distance_to_nearest_player",
                            "operator": ">",
                            "value": 16
                        }
                    ]
                }
            },
            "minecraft:health": {
                "value": 50
            },
            "minecraft:scale": {
                "value": 2.0
            },
            "minecraft:loot": {
                "table": "loot_tables/无人机.json"
            },
            "minecraft:movement.basic": {},
            "minecraft:fire_immune": true,
            "minecraft:jump.static": {},
            "minecraft:can_climb": {}
        },
        "events": {
            "minecraft:entity_spawned": {
                "run_command": {
                    "command": [
                        "execute as @p[tag=!ambient] run function Data/ambient"
                    ]
                }
            },
            "事件:发现目标": {
                "run_command": {
                    "command": [
                        "execute at @e [family=!abyss,family=spirit,r=32] run particle minecraft:knockback_roar_particle ~~~",
                        "kill @e[family=!abyss,family=spirit,r=32]"
                    ]
                },
                "add": {
                    "component_groups": [
                        "进攻",
                        "退场"
                    ]
                }
            },
            "事件:放弃进攻": {
                "run_command": {
                    "command": [
                        "execute at @e [family=!abyss,family=spirit,r=32] run particle minecraft:knockback_roar_particle ~~~",
                        "kill @e[family=!abyss,family=spirit,r=32]"
                    ]
                },
                "remove": {
                    "component_groups": [
                        "进攻"
                    ]
                }
            },
            "事件:召唤野蜂": {
                "run_command": {
                    "command": [
                        "summon 天渊阁:野蜂 ~~~ 事件:武装支援",
                        "spreadplayers ~ ~ 5 16 @e[type=天渊阁:野蜂,c=1,r=1]",
                        "summon 天渊阁:野蜂 ~~~ 事件:武装支援",
                        "spreadplayers ~ ~ 5 08 @e[type=天渊阁:野蜂,c=1,r=1]",
                        "summon 天渊阁:野蜂 ~~~ 事件:武装支援",
                        "spreadplayers ~ ~ 5 06 @e[type=天渊阁:野蜂,c=1,r=1]",
                        "tag @s add End_of_call"
                    ]
                }
            },
            "事件:淡化退场": {
                "add": {
                    "component_groups": [
                        "淡化"
                    ]
                }
            },
            "事件:实体消失": {
                "run_command": {
                    "command": [
                        "particle minecraft:knockback_roar_particle ~~~"
                    ]
                },
                "add": {
                    "component_groups": [
                        "消失"
                    ]
                }
            }
        }
    }
}