{
    "format_version": "1.19.50",
    "minecraft:block": {
        "description": {
            "identifier": "召唤器:隧道列车",
            "properties": {
                "Table:sort": [
                    0,
                    1,
                    2
                ]
            }
        },
        "components": {
            "minecraft:geometry": "geometry.prop_block.train_call",
            "minecraft:display_name": "§6< §9隧道列车§r _ §l§9召唤器§6 >§r",
            "minecraft:destructible_by_explosion": false,
            "minecraft:light_dampening": 0,
            "minecraft:breathability": "air",
            "minecraft:light_emission": 5,
            "minecraft:destructible_by_mining": {
                "seconds_to_destroy": 1.0
            },
            "minecraft:material_instances": {
                "*": {
                    "texture": "列车生成器",
                    "render_method": "alpha_test"
                }
            },
            "minecraft:part_visibility": {
                "conditions": {
                    "link": "query.block_property('Table:sort') == 1",
                    "digs": "query.block_property('Table:sort') == 2 || query.block_property('Table:sort') == 0"
                }
            },
            "minecraft:collision_box": {
                "origin": [
                    -8,
                    0,
                    -8
                ],
                "size": [
                    16,
                    6,
                    16
                ]
            },
            "minecraft:selection_box": {
                "origin": [
                    -8,
                    0,
                    -8
                ],
                "size": [
                    16,
                    6,
                    16
                ]
            },
            "minecraft:on_interact": {
                "event": "进行交互"
            },
            "minecraft:on_player_placing": {
                "event": "放置方块"
            }
        },
        "events": {
            "放置方块": {
                "set_block_property": {
                    "Table:sort": 2
                }
            },
            "进行交互": {
                "sequence": [
                    {
                        "condition": "query.is_item_name_any('slot.weapon.mainhand',0,'魔法工具:魔晶起子') == 1",
                        "trigger": {
                            "event": "获得道具",
                            "target": "self"
                        }
                    },
                    {
                        "condition": "query.is_item_name_any('slot.weapon.mainhand',0,'魔法工具:魔晶扳手') == 1",
                        "trigger": {
                            "event": "呼唤列车",
                            "target": "self"
                        }
                    }
                ]
            },
            "获得道具": {
                "run_command": {
                    "command": [
                        "give @p 载具控制:行驶开关",
                        "give @p 载具控制:左舷回转",
                        "give @p 载具控制:右舷回转"
                    ]
                }
            },
            "呼唤列车": {
                "set_block": {
                    "block_type": "air"
                },
                "run_command": {
                    "command": [
                        "summon 列车组:挖掘 ~~~"
                    ]
                }
            }
        }
    }
}