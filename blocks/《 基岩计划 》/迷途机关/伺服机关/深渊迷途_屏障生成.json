{
    "format_version": "1.19.10",
    "minecraft:block": {
        "description": {
            "identifier": "深渊迷途:屏障生成",
            "properties": {
                "Table:switch": [
                    0,
                    1
                ]
            }
        },
        "components": {
            "minecraft:geometry": "geometry.basic_block0",
            "minecraft:destructible_by_explosion": false,
            "minecraft:light_emission": 5,
            "minecraft:block_light_filter": 0,
            "minecraft:breathability": "air",
            "minecraft:destructible_by_mining": false,
            "minecraft:material_instances": {
                "*": {
                    "texture": "深渊迷途_屏障生成",
                    "render_method": "alpha_test"
                }
            },
            "minecraft:collision_box": {
                "origin": [
                    -8,
                    0,
                    -8
                ],
                "size": [
                    16,
                    16,
                    16
                ]
            },
            "minecraft:selection_box": {
                "origin": [
                    -8,
                    0,
                    -8
                ],
                "size": [
                    16,
                    16,
                    16
                ]
            },
            "minecraft:queued_ticking": {
                "looping": true,
                "interval_range": [
                    60,
                    100
                ],
                "on_tick": {
                    "event": "事件:进行侦测",
                    "target": "self"
                }
            },
            "minecraft:on_interact": {
                "event": "事件:进行交互"
            },
            "minecraft:on_player_placing": {
                "event": "事件:放置方块"
            }
        },
        "events": {
            "事件:放置方块": {
                "set_block_property": {
                    "Table:switch": 0
                }
            },
            "事件:进行交互": {
                "sequence": [
                    {
                        "condition": "query.block_property('Table:switch') == 0 && query.is_item_name_any('slot.weapon.mainhand',0,'魔法工具:魔晶扳手') == 1",
                        "set_block_property": {
                            "Table:switch": 1
                        },
                        "run_command": {
                            "command": [
                                "title @p actionbar §c屏障已生成",
                                "fill ~ ~1 ~ ~ ~32 ~ barrier 0 keep"
                            ]
                        }
                    }
                ]
            },
            "事件:进行侦测": {
                "run_command": {
                    "command": []
                }
            }
        }
    }
}